<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/recent_search_location_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_search"
            android:drawableTint="@android:color/holo_blue_light"
            android:text="Residential For Sale"
            android:paddingStart="8dp"
            android:paddingTop="8dp"
            android:textSize="18sp"
            android:textColor="@android:color/holo_blue_light"
            />
        <TextView
            android:id="@+id/recent_search_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In Dhaka"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/recent_search_location_type_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Residential"
            android:layout_gravity="bottom"
            android:gravity="center|bottom"
            android:textSize="18sp"
            android:textColor="@color/black"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>