<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:gravity="center"
    android:paddingVertical="10dp"
    android:background="@drawable/bottom_border"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="4"
        android:src="@drawable/shafin"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:padding="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/postTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 hours ago"
                android:textSize="10dp" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/favorite_outline"
                android:id="@+id/favoriteButton"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BDT 5,30,000"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/propertyPrice"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="120-L, Uttora, Dhaka"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:id="@+id/propertyAddress"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="House For Rent"
            android:id="@+id/propertyPurposeType"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/bedroom"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/black"
                    android:id="@+id/totalBedroom"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/bathroom"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/black"
                    android:id="@+id/totalBathroom"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/area"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5000 Sq Ft"
                    android:paddingHorizontal="5dp"
                    android:textColor="@color/black"
                    android:id="@+id/areaSize"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="4">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SMS"
                android:textColor="@color/primary"
                android:textAlignment="center"
                android:paddingVertical="5dp"
                android:background="@drawable/transparent_button"
                android:id="@+id/smsButton"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Call"
                android:textColor="@color/primary"
                android:textAlignment="center"
                android:paddingVertical="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/transparent_button"
                android:id="@+id/callButton"/>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>